#include <stdio.h>
#include <stdlib.h>

int main()
{
    float a,b,c;
    char dzialanie;
printf("Podaj symbol dzia≈Çania: \n a.dodawanie: \n b.odejmowanie: \n c.mnozenie: \n d.dzielenie: \n e.zakoncz: ");
scanf( "%c" ,&dzialanie);
printf("Podaj liczby dla operacji:\n");
    scanf( "%f %f", &a,&b);
switch (dzialanie)
{
case 'a':
    printf("Dodawanie");
    c = a+b;
    printf("Wynik to %f", c);
break;
case 'b':
    c=a-b;
    printf("Wynik to %f", c);
break;
case 'c':
    printf("Wynik to %f", c);
break;
case 'd':
    if (b!=0){
    c=a/b;
    printf("Wynik to %f", c);
    break;}
    else {
    printf("Dzielenie przez 0\n");
    break;}
case 'e':
    printf("Do widzenia");
    break;
default:
    printf("falszywy opereator");}


    return 0;
}
